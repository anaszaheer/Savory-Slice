<section id="top" class="home-slider js-fullheight owl-carousel bg-white">
    <div class="slider-item js-fullheight">
        <div class="overlay"></div>
        <div class="container-fluid p-0">
            <div class="row d-md-flex no-gutters slider-text js-fullheight align-items-center justify-content-end"
                data-scrollax-parent="true">
                <div class="one-third order-md-last img js-fullheight" style="background-image:url({{data.home.pizzaImage}});">
                    <div class="overlay"></div>
                </div>
                <div class="one-forth d-flex js-fullheight align-items-center ftco-animate"
                    data-scrollax=" properties: { translateY: '70%' }">
                    <div class="text mt-md-5">
                        <h1 class="mb-4">{{{data.home.header}}}</h1>
                        <p>At our Pizza House, we only make food with the freshest ingredients to delight your taste buds.</p>
                        <p><a href="#orderPlacer" class="btn btn-primary px-4 py-3 mt-3">Place an Order</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="about"  class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-sm-5 img img-2 d-flex align-items-center justify-content-center justify-content-md-end"
                style="background-image: url({{data.about.pizzaImage}}); position: relative"></div>
            <div class="col-sm-7 wrap-about py-5 ftco-animate">
                <div class="heading-section mt-5 mb-4">
                    <div class="pl-lg-5 ml-md-5">
                        <span class="subheading">About</span>
                        <h2 class="mb-4">{{data.about.header}}</h2>
                    </div>
                </div>
                <div class="pl-lg-5 ml-md-5">
                    <p>{{data.about.description}}</p>
                    <h3 class="mt-5">Special Recipe</h3>
                    <div class="thumb my-4 d-flex">
                        <a href="#" onclick="return false;" style="cursor:default" class="thumb-menu pr-md-4 text-center">
                            <div class="img" style="background-image: url(images/cheese-pizza.jpg);"></div>
                            <h4>Cheese Pizza</h4>
                        </a>
                        <a href="#" onclick="return false;" style="cursor:default" class="thumb-menu pr-md-4 text-center">
                            <div class="img" style="background-image: url(images/chicken-pizza.jpg);"></div>
                            <h4>Chicken Pizza</h4>
                        </a>
                        <a href="#" onclick="return false;" style="cursor:default" class="thumb-menu pr-md-4 text-center">
                            <div class="img" style="background-image: url(images/pepperoni-pizza.jpg);"></div>
                            <h4>Pepperoni Pizza(Beef)</h4>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="ftco-section" class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Specialties</span>
                <h2 class="mb-4">Our Menu</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-4 menu-wrap">
                <div class="heading-menu text-center ftco-animate">
                    <h3>Pizza (Only large size: 16")</h3>
                </div>
                {{#pizza}}
