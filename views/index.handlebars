                    <div class="menu-img img" style="background-image: url({{image}});"></div>
                    <div class="text">
                        <div class="d-flex">
                            <div class="one-half">
                                <h3>{{name}}</h3>
                            </div>
                            <div class="one-forth">
                                <span class="price" style="cursor:default">{{price}}</span>
                            </div>
                        </div>
                        <p><span>Meat</span>, <span>Potatoes</span>, <span>Rice</span>, <span>Tomatoe</span></p>
                    </div>
                </div>
                {{/pizza}}
            </div>

            <div class="col-md-6 col-lg-4 menu-wrap">
                <div class="heading-menu text-center ftco-animate">
                    <h3>Kebabs</h3>
                </div>
                {{#kebabs}}
                <div class="menus d-flex ftco-animate">
                    <div class="menu-img img" style="background-image: url({{image}});"></div>
                    <div class="text">
                        <div class="d-flex">
                            <div class="one-half">
                                <h3>{{name}}</h3>
                            </div>
                            <div class="one-forth">
                                <span class="price" style="cursor:default">{{price}}</span>
                            </div>
                        </div>
                        <p><span>Meat</span>, <span>Potatoes</span>, <span>Rice</span>, <span>Tomatoe</span></p>
                    </div>
                </div>
                {{/kebabs}}
                
            </div>

            <div class="col-md-6 col-lg-4 menu-wrap">
                <div class="heading-menu text-center ftco-animate">
                    <h3>Samosa</h3>
                </div>
                {{#samosa}}
                <div class="menus d-flex ftco-animate">
                    <div class="menu-img img" style="background-image: url({{image}});"></div>
                    <div class="text">
                        <div class="d-flex">
                            <div class="one-half">
                                <h3>{{name}}</h3>
                            </div>
                            <div class="one-forth">
                                <span class="price" style="cursor:default">{{price}}</span>
                            </div>
                        </div>
                        <p><span>Meat</span>, <span>Potatoes</span>, <span>Rice</span>, <span>Tomatoe</span></p>
                    </div>
                </div>
                {{/samosa}}
            </div>
            <div class="col-md-6 col-lg-4 menu-wrap">
                <div class="heading-menu text-center ftco-animate">
                    <h3>Pizza Toppings($1 each)</h3>
                </div>
                {{#toppings}}
                <div class=" d-flex ftco-animate">
                    <div class="text">
                        <div class="d-flex">
                            <div class="one-half">
                                <h5>{{this}}</h5>
                            </div>
                        </div>
                    </div>
                </div>
                {{/toppings}}
            </div>
            <div class="col-md-6 col-lg-4 menu-wrap">
                <div class="heading-menu text-center ftco-animate">
                    <h3>Other</h3>
                </div>
                {{#other}}
                <div class=" d-flex ftco-animate">
                    <div class="text">
                        <div class="d-flex">
                            <div class="one-half">
                                <h5>{{name}}</h5>
                            </div>
                            <div class="one-forth">
                                <span class="price" style="cursor:default"><h6>{{price}}</h6></span>
                            </div>
                        </div>
